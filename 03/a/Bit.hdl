/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    And(a=true,b=prev,out=initial);
    Mux(a=initial,b=in,sel=load,out=res);
    DFF(in=res,out=prev, out=out);
}
